{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": ["*"],
      "@config/*": ["config/*"]
    },
    "types": ["node", "vitest"]
  },
  "include": [
    "api/**/*.ts",
    "config/**/*.ts",
    "core/**/*.ts",
    "features/**/*.ts",
    "infrastructure/**/*.ts",
    "security/**/*.ts",
    "shared/**/*.ts",
    "types/**/*.ts",
    "tests/**/*.ts",
    "*.ts"
  ],
  "exclude": ["node_modules", "dist"]
}