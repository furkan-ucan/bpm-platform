{
  "compilerOptions": {
    "target": "es2018",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "jest"]
  },
  "include": [
    "./**/*.ts",
    "./**/*.js",
    "./**/*.cjs",
    "./**/*.mjs",
    "eslint.config.js",
    "jest.config.cjs"
  ],
  "exclude": ["node_modules", "dist"]
}
